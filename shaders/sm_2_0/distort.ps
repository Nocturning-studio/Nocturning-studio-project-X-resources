#include "common.h"
//////////////////////////////////////////////////////////////////////////////////////////
uniform sampler2D s_distort;
//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 main (half2 tc0: TEXCOORD0): COLOR
{
    half4 distort = tex2D (s_distort, tc0);
    half2 offset = (distort.xy - .5h) * def_distort;

    return tex2D (s_base, tc0 + offset);
}
