#include "common.xrh"

struct p_TL
{
    float2 Tex0 : TEXCOORD0;
    float4 Color : COLOR;
};

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 main(p_TL I) : COLOR
{
    float4 TextureColor = tex2Dlod0(s_base, I.Tex0);
    TextureColor.rgb = sRgbToLinear(TextureColor.rgb);
    return TextureColor * I.Color * 0.5f;
}
