#include "common.xrh"
///////////////////////////////////////////////////////////////////////////////////
uniform sampler2D s_photo_grid;
uniform sampler2D s_cinema_borders;
uniform sampler2D s_watermark;
///////////////////////////////////////////////////////////////////////////////////
uniform int3 enabled_overlays;
///////////////////////////////////////////////////////////////////////////////////
float4 main (float4 TexCoords : TEXCOORD0) : COLOR0
{
	float4 ImageColor = tex2D(s_image, TexCoords);

	if(enabled_overlays.x > 0)
		ImageColor *= tex2Dlod0(s_photo_grid, TexCoords);

	if(enabled_overlays.y > 0)
		ImageColor *= step(abs(TexCoords.y - 0.5f), 0.4f);

	if(enabled_overlays.z > 0)
		ImageColor *= tex2Dlod0(s_watermark, TexCoords);

	return ImageColor;
}
