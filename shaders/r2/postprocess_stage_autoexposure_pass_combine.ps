float4 main (float2 TexCoords: TEXCOORD0): COLOR0
{
    float4 SceneColor = tex2Dlod0 (s_image, TexCoords);
    
    float Exposure = tex2Dlod0 (s_autoexposure, float2 (0.5f, 0.5f)).r;
    
    return SceneColor * Exposure;
}
