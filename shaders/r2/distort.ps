#include "common.h"

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 main (float2 tc: TEXCOORD0): COLOR
{
	float2 distort = tex2D (s_distort, tc);
	float2 offset = (distort.xy - .5h) * def_distort;
	float3 image = tex2D (s_base, tc + offset);

    return float4 (image, 1.0h);
}
