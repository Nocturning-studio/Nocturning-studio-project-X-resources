#include "common.h"

struct v2p
{
	float4 color: COLOR0;
  	float2 tc0: TEXCOORD0;
  	float2 tc1: TEXCOORD1;
};

uniform_sampler2D(s_clouds0, smp_base);
uniform_sampler2D(s_clouds1, smp_base);

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 main (v2p I): COLOR
{
	float4 s0 = tex2D (s_clouds0, I.tc0);
	float4 s1 = tex2D (s_clouds1, I.tc1);
	float4 mix = I.color * (s0 + s1);

    return float4 (mix.rgb, I.color.a);
}
