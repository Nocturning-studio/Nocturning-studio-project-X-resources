//////////////////////////////////////////////////////////////////////////////////////////
#include "common.h"
//////////////////////////////////////////////////////////////////////////////////////////
struct v_sky
{
    float4 Position: POSITION;
    float4 Color: COLOR0;
    float3 UV0: TEXCOORD0;
    float3 UV1: TEXCOORD1;
};

struct vf
{
    float3 UV0: TEXCOORD0;
    float3 UV1: TEXCOORD1;
    float4 hpos: SV_Position;
    float4 Color: COLOR0;
};
//////////////////////////////////////////////////////////////////////////////////////////
vf main (v_sky v)
{
    vf o;
    
    o.hpos = mul (m_WVP, mul (1000.0f, v.Position));
    o.hpos.z = o.hpos.w;
    o.UV0 = v.UV0;
    o.UV1 = v.UV1;
    o.Color = v.Color;
    
    return o;
}
