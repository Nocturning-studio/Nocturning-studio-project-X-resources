#include "common.h"
//////////////////////////////////////////////////////////////////////////////////////////
uniform_sampler2D(s_distort, smp_nofilter);
uniform_sampler2D(s_image, smp_rtlinear); // dx11 hack...
//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 main (float2 tc0: TEXCOORD0):SV_Target
{
    float4 distort = tex2D (s_distort, tc0);
    float2 offset = (distort.xy - .5f) * def_distort;

    return tex2D (s_image, tc0 + offset);
}
