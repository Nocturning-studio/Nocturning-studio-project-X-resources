#include "common.h"
//////////////////////////////////////////////////////////////////////////////////////////
uniform sampler2D s_distort;
//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 main (float2 tc0: TEXCOORD0): COLOR
{
    float4 distort = tex2D (s_distort, tc0);
    float2 offset = (distort.xy - .5h) * def_distort;

    return tex2D (s_base, tc0 + offset);
}
