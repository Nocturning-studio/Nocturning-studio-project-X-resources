// Pixel
float4 main (float2 TexCoord: TEXCOORD0):SV_Target
{
    float2 Distort = t_distort.Sample (smp_linear, TexCoord);
    float2 SampleOffset = (distort.xy - 0.5f) * def_distort;

    return t_base.Sample (smp_linear, TexCoord + SampleOffset);
}
