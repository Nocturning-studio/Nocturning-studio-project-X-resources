#include "common.h"
//////////////////////////////////////////////////////////////////////////////////////////
float4 main(float2 TexCoords : TEXCOORD0) : COLOR
{
    // We are use D3DFMT_A8 for ao texture - sample alpha channel only
    float ao = tex2D (s_ao, TexCoords + screen_res.zw * float2 (1.5h, -0.5h)).r;
    ao += tex2D (s_ao, TexCoords + screen_res.zw * float2 (1.5h, 1.5h)).r;
    ao += tex2D (s_ao, TexCoords + screen_res.zw * float2 (-0.5h, -0.5h)).r;
    ao += tex2D (s_ao, TexCoords + screen_res.zw * float2 (-0.5h, 1.5h)).r;
    return ao * 0.25h;
}
