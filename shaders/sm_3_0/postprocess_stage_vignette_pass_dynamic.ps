#include "common.h"
///////////////////////////////////////////////////////////////////////////////////
uniform float vignette_power;
///////////////////////////////////////////////////////////////////////////////////
float4 main (float2 TexCoords : TEXCOORD0): COLOR
{
	float4 OutColor = tex2Dlod0 (s_image, TexCoords);

    float Vignette = tex2Dlod0 (s_vignette, TexCoords).r;
	OutColor.rgb *= Vignette + (1.0h - Vignette) * (1.0h - vignette_power);

	return OutColor;
}
