#include "common.h"

struct 	v2p
{
 	vector2 	tc0	: 	TEXCOORD0;	// base
	vector4	c	:	COLOR0;		// diffuse
};


//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
vector4 	main	( v2p I )	: COLOR
{
	// alpha = 0 	-> color=1
	// alpha = 1	-> color=c
	vector4	c 	= I.c*tex2D	(s_base,I.tc0);
	vector3 	r 	= lerp(vector3(1,1,1),c.xyz,c.w);
	return	vector4(r,1);
}
