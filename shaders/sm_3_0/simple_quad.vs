void main
(
	in float3 P: POSITION,
	inout float2 tc: TEXCOORD0,
	out float4 pos2d: POSITION
)
{
    pos2d.xy = P.xy * screen_res.zw * 2 - 1;
    pos2d = float4 (pos2d.x, -pos2d.y, 0, 1);
}
