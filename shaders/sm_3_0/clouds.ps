#include "common.h"

struct v2p
{
	vector4 color: COLOR0;
  	vector2 tc0: TEXCOORD0;
  	vector2 tc1: TEXCOORD1;
};

uniform sampler2D s_clouds0: register(s0);
uniform sampler2D s_clouds1: register(s1);

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
vector4 main (v2p I): COLOR
{
	vector4 s0 = tex2D (s_clouds0, I.tc0);
	vector4 s1 = tex2D (s_clouds1, I.tc1);
	vector4 mix = I.color * (s0 + s1);

    return vector4 (mix.rgb, I.color.a);
}
