#include "common.h"
///////////////////////////////////////////////////////////////////////////////////
uniform float4 sepia_params;
///////////////////////////////////////////////////////////////////////////////////
float4 main (float2 TexCoords: TEXCOORD0): COLOR
{
    float4 OutColor = tex2Dlod0 (s_image, TexCoords);
    
    OutColor.rgb *= sepia_params.rgb + (1.0h - sepia_params.rgb) * (1.0h - sepia_params.a);
    
    return OutColor;
}
