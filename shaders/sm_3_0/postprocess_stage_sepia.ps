#include "common.h"
///////////////////////////////////////////////////////////////////////////////////
uniform vector4 sepia_params;
///////////////////////////////////////////////////////////////////////////////////
vector4 main (vector2 TexCoords: TEXCOORD0): COLOR
{
    vector4 OutColor = tex2Dlod0 (s_image, TexCoords);
    
    OutColor.rgb *= sepia_params.rgb + (1.0h - sepia_params.rgb) * (1.0h - sepia_params.a);
    
    return OutColor;
}
