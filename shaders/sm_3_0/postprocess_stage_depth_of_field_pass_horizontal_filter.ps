#include "common.h"
#include "depth_of_field_common.h"
///////////////////////////////////////////////////////////////////////////////////
#define DOF_SEARCH_SIZE 4
///////////////////////////////////////////////////////////////////////////////////
vector4 main (vector2 TexCoords: TEXCOORD0): COLOR0
{
    vector BlurPower = DOFFactor (TexCoords);
    
    if (BlurPower == 0.0h)
    {
        return tex2Dlod0 (s_image, TexCoords);
    }
    else
    {
        vector2 RaySize = screen_res.zw;
        vector3 SummaryImageColor = NULL;
        vector Contribution = 0.0h;
        
        for (int i = -DOF_SEARCH_SIZE / 2; i < DOF_SEARCH_SIZE / 2; i++)
        {
            vector2 SampleCoords = TexCoords + vector2 (i, 0) * RaySize;
        
            vector3 SampleColor = tex2Dlod0 (s_image, SampleCoords);

            vector SampleContribution = DOFFactor (SampleCoords);
        
            SummaryImageColor += SampleColor * SampleContribution;
        
            Contribution += SampleContribution;
        }
    
        vector4 BlurredImageColor = vector4 ((SummaryImageColor / Contribution), 1.0h) * BlurPower;
        vector4 UnblurredImageColor = tex2Dlod0 (s_image, TexCoords) * (1.0h - BlurPower);
    
        return BlurredImageColor + UnblurredImageColor;
    }
}
